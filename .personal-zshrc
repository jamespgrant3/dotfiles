export PATH="$PATH:$HOME/apps/colima"
export PATH="$PATH:$HOME/apps/docker"

# create pull request with title
# $1 title
# $2 base branch
# $3 body
# $4 label
crpr() {
  gh pr create \
  -t $1 \
  -r "jamespgrant3/pull-request-approvers" \
  -a "@me" \
  -B $2 \
  -b $3 \
  -l $4
}

# create pull request
# $1 base branch
# $2 body
cpr() {
  gh pr create \
  -t $(git symbolic-ref --short HEAD) \
  -r "jamespgrant3/pull-request-approvers" \
  -a "@me" \
  -B $1 \
  -b $2
}

# create pull request draft
# $1 base branch
# $2 body
cprd() {
  gh pr create \
  -t $(git symbolic-ref --short HEAD) \
  -r "jamespgrant3/pull-request-approvers" \
  -a "@me" \
  -B $1 \
  -b $2 \
  --draft
}

