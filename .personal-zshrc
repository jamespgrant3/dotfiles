# create pull request with title
# $1 title
# $2 base branch
# $3 body
# $4 label
crpr() {
  gh pr create \
  -t $1 \
  -r "jamespgrant3/pull-request-approvers" \
  -a "@me" \
  -B $2 \
  -b $3 \
  -l $4
}

# create pull request
# $1 base branch
# $2 body
cpr() {
  gh pr create \
  -t $(git symbolic-ref --short HEAD) \
  -r "jamespgrant3/pull-request-approvers" \
  -a "@me" \
  -B $1 \
  -b $2
}

# create pull request draft
# $1 base branch
# $2 body
cprd() {
  gh pr create \
  -t $(git symbolic-ref --short HEAD) \
  -r "jamespgrant3/pull-request-approvers" \
  -a "@me" \
  -B $1 \
  -b $2 \
  --draft
}

alias sync="aws s3 sync '/Volumes/Seagate Backup Plus Drive/Crashplan' s3://james-external-backup"
alias sop="source $HOME/.zprofile"
alias so="source $HOME/.personal-zshrc"

export AWS_DEFAULT_REGION=us-east-1
export AWS_DEFAULT_OUTPUT=json
